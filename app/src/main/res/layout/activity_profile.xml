<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activitymain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.TimeTable.Profile">

    <!-- Top Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUTECH"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#000000"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject: MAD"
        android:textColor="#F60303"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PROFILE"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="#F60303" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Member 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M Bilal Hashmi (F22605014)"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- Member 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oasid Jamil (F22605009)"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- Member 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abdullah Bin Ejaz (F22605033)"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- Member 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zohaib Arif (F22605047)"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- Member 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zohaib Ul Hassan (F22605011)"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:elevation="2dp"
            app:itemBackground="@android:color/white"
            app:itemIconSize="24dp"
            app:itemIconTint="@color/selector_nav_item"
            app:itemTextColor="@color/black"
            app:menu="@menu/menu" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
</LinearLayout>
